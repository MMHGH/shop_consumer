<!--pages/myCenter/myCenter.wxml-->
<view class='wraper my-center'>
    <view class='header'>
        <view class="header-logo flex">
            <view class="flex_1" bindtap="shopHome">
                <view class="logo">TATTOO</view>
                <view class="text">塔兔蒸汽实验室</view>
             </view>
             <view class="header-icon" bindtap='checkAuth'>
               <van-icon name="https://b.yzcdn.cn/vant/icon-demo-1126.png" />
             </view>
        </view>
        <view class="grade motifBg">
            <text class="grade-text">会员等级：1</text>
            <text class="grade-num">积分：11</text>
        </view>
    </view>
    <view class='main'>
      <scroll-view class='main-scroll' scroll-y style="height: 100%">
        <view class='main-list'>
          <view class='card' wx:for="{{orderList}}" wx:key="{{index}}">
                <view class="card-info">
                    <view class="item flex" bindtap="openData" wx:for="{{item.list}}" wx:key="{{index}}">
                        <image class="img" src="{{item.url}}"></image>
                        <view class="item-text flex_1">
                            <view class="brand-name">{{item.brandName}}</view>
                            <view class="taste">{{item.taste}}</view>
                        </view>
                        <view class="status" >
                            <view>{{item.status == 0?'已发货':'未发货'}}</view>
                            <view>共{{item.num}}</view>
                        </view>
                    </view>
                </view>
                <view class="back-goods" wx:if="{{item.info.isTrue}}">
                    <van-button size="mini" catchtap="salesReturn">退货</van-button>
                </view>
                <view class="location-info motifBg flex" data-list="{{item}}" bindtap="openLocation">
                    <text class="location-info__name flex_1">深圳深圳市南山区深圳市南</text>
                    <van-icon class="location-info__icon" name="location-o" color="#e9b708"/>
                </view>
           </view>
        </view>
      </scroll-view>
    </view>
    <van-overlay class="overlay" show="{{ show }}">
        <view class="overlay-wrapper">
            <view class="overlay-content">
                <text class="cause">告诉我们什么原因？</text>
                <view class="reason {{index === active ?'active':''}}" data-index="{{index}}" bindtap="seleteReason" wx:for="{{reasonList}}" wx:key="{{key}}">{{item}}</view>
                <text class="back">金额$99将按原路退还账户</text>
                <view>
                    <van-button class="btn" color="#333333" bindtap="confirm">确定退货</van-button>
                    <van-button color="#333333" bindtap="consider">再考虑下</van-button>
                </view>
            </view>
        </view>
    </van-overlay>
    <text class='no-tips' wx:if="{{!orderList.length}}">{{noTips}}</text>
    <view class="relation motifBg" bindtap="callUp">
        <van-icon name="phone-o" size="60rpx" color="#fff"/>
        <text class="text">{{serviceTips}}</text>
    </view>
</view>